<!--pages/idSystem/groupInnuendo.wxml-->
<!-- 搜索框 -->
<view class="page">
  <view class="page__bd">
    <view class="weui-search-bar">
      <view class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <icon class="weui-icon-search_in-box" type="search" size="18"></icon>
          <input type="text" class="weui-search-bar__input" placeholder="输入你想要的内容" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" confirm-type="search" bindconfirm="searchInput" />
          <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
            <icon type="clear" size="16"></icon>
          </view>
        </view>
      </view>
      <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="searchInput">搜索</view>
    </view>
    <view>
      <view class="weui-cells__title">搜索结果列表({{resultCount}})</view>
      <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
        <navigator wx:for="{{result}}" wx:key="date" url="" class="weui-cell" hover-class="weui-cell_active">
          <view class="weui-cell__bd">
            {{}}
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access">{{}}</view>
        </navigator>
      </view>
    </view>
  </view>
</view>